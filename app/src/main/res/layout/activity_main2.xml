<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    tools:context=".ScientificActivity"
    android:theme="@style/AppTheme.NoActionBar">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:gravity="bottom|end"
        android:hint="@string/awesome_scientific_calculator"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/c"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/buttonPlus"
        app:layout_constraintTop_toTopOf="@+id/buttonPlus" />

    <Button
        android:id="@+id/buttonInverse"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/inverse"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/buttonMinus"
        app:layout_constraintTop_toTopOf="@+id/buttonMinus" />

    <Button
        android:id="@+id/buttonBackspace"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/backspace"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/buttonMultiply"
        app:layout_constraintTop_toTopOf="@+id/buttonMultiply" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton_released"
        android:onClick="doSubmit"
        android:text="@string/plus"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <Button
        android:id="@+id/button1"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/_1"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/_2"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toTopOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/_3"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton_released"
        android:onClick="doSubmit"
        android:text="@string/minus"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toTopOf="@+id/button6" />

    <Button
        android:id="@+id/button4"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/_4"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/_5"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/_6"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toTopOf="@+id/button5" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton_released"
        android:onClick="doSubmit"
        android:text="@string/multiply"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toTopOf="@+id/button9" />

    <Button
        android:id="@+id/button7"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/_7"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button8"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/_8"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toTopOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/_9"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toTopOf="@+id/button8" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton_released"
        android:onClick="doSubmit"
        android:text="@string/divide"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/buttonDot"
        app:layout_constraintTop_toTopOf="@+id/buttonDot" />

    <Button
        android:id="@+id/button0"
        android:layout_width="@dimen/dp152"
        android:layout_height="@dimen/dp58"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/_0"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/dot"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toTopOf="@+id/button0" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/equal"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/buttonDivide"
        app:layout_constraintTop_toTopOf="@+id/buttonDivide" />

    <Button
        android:id="@+id/buttonSin"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/sin"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/buttonInverse"
        app:layout_constraintTop_toTopOf="@+id/buttonInverse" />

    <Button
        android:id="@+id/buttonCos"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/cos"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/buttonBackspace"
        app:layout_constraintTop_toTopOf="@+id/buttonBackspace" />

    <Button
        android:id="@+id/buttonTan"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/tan"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/buttonClear"
        app:layout_constraintTop_toTopOf="@+id/buttonClear" />

    <Button
        android:id="@+id/buttonCot"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="@string/cot"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/buttonCos"
        app:layout_constraintTop_toTopOf="@+id/buttonEqual" />

    <Button
        android:id="@+id/buttonPower"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="^"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/buttonFactor"
        app:layout_constraintTop_toTopOf="@+id/buttonSin" />

    <Button
        android:id="@+id/buttonFactor"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp58"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/roundbutton"
        android:onClick="doSubmit"
        android:text="!"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/buttonTan"
        app:layout_constraintTop_toTopOf="@+id/buttonTan" />

    <Button
        android:id="@+id/jump1"
        android:layout_width="@dimen/dp68"
        android:layout_height="60dp"
        android:background="@drawable/roundbutton_pressed"
        android:onClick="doswitch"
        android:text="Basic"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/buttonPower"
        app:layout_constraintTop_toTopOf="@+id/buttonCot" />


</android.support.constraint.ConstraintLayout>